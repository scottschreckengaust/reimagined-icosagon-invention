{
  "name": "lab-dispatch",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "husky": "^1.3.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "yarnhook": "^0.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "TZ=utc react-scripts test --coverage",
    "lint": "./node_modules/.bin/eslint ./src",
    "verify": "TZ=utc CI=true echo $PATH && yarn test && yarn lint",
    "eject": "TZ=utc react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-push": "npx yarn verify",
      "pre-commit": "yarnhook",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook",
      "post-commit": "./scripts/asana-post-commit"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
